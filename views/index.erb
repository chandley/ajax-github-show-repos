<html>
  <head>
    <title>Github profiles</title>
    <link href='css/github.css' rel='stylesheet'>
  </head>
  <body>
    <form id='add_profile'>
      <input id='username' placeholder='Enter a Github username'>
      <button type='submit'>Load profile</button>
    </form>

    <div class='profile-container'>
    </div>

  <template id='profile-template'>
    <div class="profile">
      <div class="left">
        <img src="{{ avatar_url }}">
      </div>
          
        <div class="right">
          <h3>
            <a href="{{ html_url }}">
            </a>
          </h3>
          <h4>Repos: {{ public_repos }}</h4>
          <h4>Followers: {{ followers }}</h4>
        </div>
          <br clear="all">
        </div>
      </div>
    </template>

    <template id='user-repos-template'>
      <h3>empty template for test only<h3>
    </template>

    <script src='https://code.jquery.com/jquery-2.1.1.min.js'></script>
    <script src='https://cdnjs.cloudflare.com/ajax/libs/mustache.js/0.8.1/mustache.js'></script>
    <script>

    var addProfileFromUsername = function(userName) {
      var promise = $.get("https://api.github.com/users/" + userName + "?client_id=<%= ENV['CLIENT_ID'] %>&client_secret=<%= ENV['CLIENT_SECRET'] %>", function(user){
        var newProfile = Mustache.render($('#profile-template').html(), user);
        $(newProfile).prependTo('.profile-container').hide().slideDown();
      });
  
      var promise = $.get("https://api.github.com/users/" + userName +"/repos?client_id=<%= ENV['CLIENT_ID'] %>&client_secret=<%= ENV['CLIENT_SECRET'] %>", function(repo_hash){
        // do we need extra mustache goodness to cope with the array?
        var second_newProfile = Mustache.render($('#user-repos-template').html(), repo_hash);
        $(second_newProfile).prependTo('.profile-container').hide().slideDown();
      });

      promise.error(function() {
        alert('sorry no user name ' + userName);
      });
      promise.always(function(){ 
        $('#username').val(''); 
      });

    };

    $(document).ready(function(){
      $('#add_profile').submit(function(event) {
        event.preventDefault();
        addProfileFromUsername($('#username').val());
      });
    });

    </script>
  </body>
</html>